pipeline {
    agent any
    environment {
        branch = 'master'
        scmUrl = 'https://github.com/wuxudong/spring-cloud-best-practice.git'        
    }
    stages {
        stage('checkout git') {
            steps {
                git branch: branch, url: scmUrl
            }
        }

        stage('build') {
            steps {
                sh 'mvn clean package -DskipTests=true'
            }
        }

        stage('deploy'){
            steps {
                sh 'JENKINS_NODE_COOKIE=dontKillMe nohup java -jar eureka/target/eureka.jar &'                
            }
        }

        
    }
    
}